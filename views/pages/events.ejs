<!DOCTYPE html>

<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin="" />
        <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js" integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA==" crossorigin=""></script>

        <link rel="stylesheet" href="/styles/events.css" />
</head>

<body>
    <%- include('../partials/nav'); %>
        <div class="container-fluid pt-4">
            <div class="row">
                <div class="col-lg-4 aside-container">
                    <div class="row first-row">
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Filter events</h5>
                                    <p class="card-text">
                                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link active mr-4" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Search By Friends</button>
                                            </li>
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link mr-4" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Search By Hobbies</button>
                                            </li>
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link mr-4" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Search By LatLong</button>
                                            </li>
                                        </ul>
                                        <div class="tab-content mt-3" id="myTabContent">
                                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                                <div class="mb-3">
                                                    <label for="Select" class="form-label">Select your friend</label>
                                                    <select id="Select" class="form-select">
                                                      <option>Faisal</option>
                                                      <option>Sarat</option>
                                                    </select>
                                                </div>

                                                <button class="btn btn-outline-success mt-4" type="submit">Find</button>
                                            </div>
                                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                                <div class="mb-3">
                                                    <label for="Select" class="form-label">Select your hobbies</label>
                                                    <select id="Select" class="form-select">
                                                      <option>Football</option>
                                                      <option>BasketBall</option>
                                                    </select>
                                                </div>
                                                <button class="btn btn-outline-success mt-4" type="submit">Find</button>
                                            </div>
                                            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                                <div class="d-flex align-items-end justify-content-center">
                                                    <div class="flex-grow-1 me-3">
                                                        <label class="form-label" for="lat">Latitude</label>
                                                        <input class="form-control" type="text" id="lat" name="firstname" placeholder="lat" />
                                                    </div>
                                                    <div class="flex-grow-1 me-3">
                                                        <label class="form-label" htmlFor="lon">Longitude</label>
                                                        <input class="form-control" type="text" id="lon" name="lastname" placeholder="lon" />
                                                    </div>
                                                </div>
                                                <button class="btn btn-outline-success mt-4" type="submit">Find</button>
                                            </div>
                                        </div>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row second-row"></div>
                </div>
                <div class="col-lg-8">
                    <div id="map" class="map-container"></div>
                </div>
            </div>
        </div>
        <script src="/js/map.js"></script>
</body>

</html>